		<script is:inline>
			const aboutMe =
				"I'm a passionate software engineer with a knack for creating efficient and scalable web applications. With a deep" +
				" understanding of modern web technologies, I strive to build" +
				" solutions that enhance user experiences and solve complex" +
				" problems. ";

			const cursor = "|";
			function writeOut() {
				const aboutMeContainer = document.querySelector(".about-me");
				const cursorContainer = document.querySelector(".cursor");
				let i = -50;
				const typingInterval = setInterval(() => {
					aboutMeContainer.innerText = aboutMe.substring(0, i++);
					cursorContainer.innerText = i % 5 === 0 ? cursor : "";
					if (i > aboutMe.length) {
						aboutMeContainer.innerText = aboutMe;
						cursorContainer.innerText = "";
						clearInterval(typingInterval);
					}
				}, 50);
			}

			document.addEventListener("DOMContentLoaded", function () {
				const iconContainer = document.querySelector(".icon-container");
				const hoverTarget = document.querySelector(".icon-parent");
				if (iconContainer && hoverTarget) {
					iconContainer.addEventListener("mouseenter", () => {
						const maxVx =
							window.innerWidth - iconContainer.offsetWidth;
						const maxVy =
							window.innerHeight - iconContainer.offsetHeight;

						const vx = (Math.random() * maxVx) / 2;
						const vy = (Math.random() * maxVy) / 2;
						iconContainer.style.transform = `translate(${vx}px, ${vy}px)`;
					});
				}
				setTimeout(writeOut, 250);
			});
		</script>
