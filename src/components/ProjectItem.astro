---
import SkillBadge from "./SkillBadge.astro";
const { image, alt, title, description, skills } = Astro.props;
---

alt
<div
    class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
>
    <article class="flex flex-col items-start justify-between">
        <div class="relative w-full">
            <img
                src={image}
                alt={alt}
                class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
            />
            <div
                class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
            >
            </div>
        </div>
        <div class="max-w-xl">
            <div class="group relative">
                <h3
                    class="mt-3 text-lg font-semibold leading-6 text-gray-50 group-hover:text-gray-50"
                >
                    <a href="#">
                        <span class="absolute inset-0"></span>
                        {title}
                    </a>
                </h3>
                <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-50">
                    {description}
                </p>
            </div>
            {
                skills &&
                    skills.map(({ icon, label }) => (
                        <SkillBadge icon={icon} label={label} />
                    ))
            }
        </div>
    </article>
</div>
